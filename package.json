{
  "name": "stazh-mikhailov",
  "version": "0.0.1",
  "description": "Frontend side for Stazh Mikhailov site",
  "keywords": [],
  "author": "Roman @Realetive Ganin",
  "private": true,
  "homepage": "https://github.com/realetive/stazh-mikhailov#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/realetive/stazh-mikhailov.git"
  },
  "scripts": {
    "make": "node -r dotenv/config node_modules/enb/bin/enb make",
    "postinstall": "npm run drop-cache && npm run make",
    "install:deps": "npm i --ignore-scripts",
    "start": "node -r dotenv/config server",
    "dev": "npm run drop-cache && npm run make && nodemon",
    "drop-cache": "rm -rf .enb/tmp",
    "prod": "npm run drop-cache && npm run make",
    "watch": "chokidar 'components/**' --initial -c 'enb make && notify -t $HOST -m Built'",
    "lint": "eslint --fix . && bemhint .",
    "test": "npm run lint"
  },
  "pre-commit": [
    "test"
  ],
  "engines": {
    "node": ">=8"
  },
  "browserslist": [
    "ie >= 11",
    "> 2%",
    "last 2 versions"
  ],
  "dependencies": {
    "bem-components": "^6.0.1",
    "bem-core": "^4.3.1"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "axios-extensions": "^3.0.4",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-slashes": "^1.3.1",
    "cookie-parser": "^1.4.3",
    "debug-http": "^1.1.0",
    "decache": "^4.5.0",
    "dotenv": "^6.2.0",
    "enb": "^2.0.0-0",
    "enb-bem-i18n": "^1.1.1",
    "enb-bem-techs": "^2.2.2",
    "enb-bemxjst": "^8.10.4",
    "enb-bemxjst-i18n": "github:tadatuta/enb-bemxjst-i18n#bemtree-nextgen",
    "enb-postcss": "^2.0.0",
    "express": "^4.16.4",
    "express-pino-logger": "^4.0.0",
    "express-session": "^1.15.6",
    "lost": "^8.3.0",
    "mobile-detect": "^1.4.3",
    "nodemon": "^1.18.9",
    "pobem": "^1.1.2",
    "postcss-cssnext": "^3.1.0",
    "postcss-each": "^0.10.0",
    "postcss-for": "^2.1.1",
    "postcss-import": "^12.0.1",
    "postcss-inline-svg": "^3.1.1",
    "postcss-nested": "^4.1.1",
    "postcss-reporter": "^6.0.0",
    "postcss-simple-vars": "^5.0.1",
    "postcss-url": "^8.0.0",
    "pretty-error": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "serve-static": "^1.13.2",
    "tiny-lr": "^1.1.1",
    "universal-router": "^7.0.0"
  },
  "optionalDependencies": {
    "bem-tools-core": "0.0.3",
    "bem-tools-create": "^2.3.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": false,
    "execMap": {
      "js": "node"
    },
    "watch": [
      "server",
      ".enb"
    ],
    "ext": "js"
  }
}
